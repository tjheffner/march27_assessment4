<html>
    <head>
      <title>Assessment 4: Shoe Store & Brand Database</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">

          <h3>{{ store.getName }}</h3>
          <h5>Location: {{ store.getAddress }}</h5>

        <h4>Update {{ store.getName }}'s info</h4>

            <form action="/stores/{{ store.getId }}/name" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="new_name">Rename store:</label>
                <input id="new_name" name="new_name" type="text">
                <button type="submit">Update</button>
            </form>

            <form action="/stores/{{ store.getId }}/address" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="new_address">New address:</label>
                <input id="new_address" name="new_address" type="text">
                <button type="submit">Update</button>
            </form>

            <form action="/stores/{{ store.getId }}/delete" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Remove store</button>
            </form>

            <p><a href="/stores/{{ store.getId }}">Back</a></p>

        </div>

    </body>
</html>
